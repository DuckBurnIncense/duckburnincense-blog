---

import { friendshipLinks } from "@/content/friends";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import FriendshipLinkCard from "@components/widget/FriendshipLinkCard.astro";
import { Icon } from "astro-icon/components";
---
<MainGridLayout title={i18n(I18nKey.friendshipLinks)} description={i18n(I18nKey.friendshipLinks)}>
  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-9 py-6 relative w-full">
      <div class="flex items-center gap-2 mb-6">
          <div class="h-8 w-8 rounded-lg
                      flex items-center justify-center
                      text-white dark:text-black/70">
              <Icon name="material-symbols:diversity-3" class="text-[1.5rem] text-[var(--primary)]">
          </div>
          <h1 class="text-2xl font-bold text-black dark:text-white">{i18n(I18nKey.friendshipLinks)}</h1>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {friendshipLinks.map(link => (
          <FriendshipLinkCard
            url={link.url}
            avatarUrl={link.avatarUrl}
            title={link.title}
            description={link.description}
          />
        ))}
      </div>
    </div>
  </div>
</MainGridLayout>